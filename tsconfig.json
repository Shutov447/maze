{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "Game": ["./game/index.ts"],
            "Maze": ["./maze/index.ts"],
            "Player": ["./player/index.ts"],
            "Utils": ["./utils/index.ts"],
            "Types": ["./types/index.ts"]
        },
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
